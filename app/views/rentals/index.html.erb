<h1>Rentals</h1>

<table>
  <thead>
    <tr>
      <th>Condition</th>
      <th>Return date</th>
      <th>Estimate return date</th>
      <th>Rented date</th>
      <th>User</th>
      <th>Item</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rentals.each do |rental| %>
      <tr>
        <td><%= rental.condition %></td>
        <td><%= rental.return_ate %></td>
        <td><%= rental.estimatte_return_date %></td>
        <td><%= rental.rented_date %></td>
        
        <td><%= rental.user_id %></td>
        <td><%= rental.item_id %></td>
        <td><%= link_to 'Show', rental %></td>
        <td><%= link_to 'Edit', edit_rental_path(rental) %></td>
        <td><%= link_to 'Destroy', rental, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

