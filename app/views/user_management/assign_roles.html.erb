<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name  |</th>
      <th>Id Number  |</th>
      <th>Phone Number  |</th>
      <th>E-mail Account  |</th>
      <th>Id  |</th>
      <th>Role List  </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td> <%= user.name %></td>
        <td> <%= user.id_number %></td>
        <td> <%= user.phone %></td>
        <td> <%= user.email %></td>
        <td> <%= user.id %></td>
        <td> 
          <select class="form-select">
            <option selected>Select role</option>
            <% @roles.each do |role| %>
                <option> <%= role.name %> </option>
            <% end %>
          </select>
        </td>
        <td><%= link_to 'Show', user_management_show_path %></td>
        <td><%= link_to 'Edit', user_management_edit_path(id: user.id) %></td>
        <td><%= link_to 'Destroy', cancel_user_registration_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

