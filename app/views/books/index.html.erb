<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table class="table">
  <thead>
    <tr>
      <th>Isbn number</th>
      <th>Title</th>
      <th>Author</th>
      <th>Edition</th>
      <th>Notes</th>
      <th>Teacher</th>
      <th>Id</th>
      <th>Availability</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each_with_index do |book, index| %>
      <tr>
        <td><%= book.isbn_number %></td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.year %></td>
        <td><%= book.notes %></td>
        <td><%= book.teacher %></td>
        <td><%= book.id %></td>
        <td><%= @availables[index] %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

